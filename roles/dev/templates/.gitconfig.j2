[merge]
   tool = opendiff
[core]
   excludesfile = {{ getent_passwd[cifs_user][4] }}/.gitignore

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
untracked = red bold

[user]
   name = {{ git_name }}
   username = {{ git_username }}
   email = {{ git_email }}